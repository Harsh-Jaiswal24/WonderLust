<style>

.alert {
    border-radius: 0.5rem; /* Ensure rounded corners for the alert */
    overflow: hidden; /*Prevent content from overflowing the alert */
    position: relative;
}
    /* Style for the bottom progress bar */
    .progress-bar-timer {
        position: absolute;
        margin-left: .2px;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 4px;
        /* border-bottom-right-radius: 4px; */
        border-bottom-left-radius: 0.5rem;
        /* border-radius: 0 0 0.5rem 0; Match the parentâ€™s border radius */
        transition: width 5s linear; /* Smooth transition for 5 seconds */
    }
    </style>
    
    <script>
        // JavaScript to handle the progress bar and alert auto-dismiss
        window.addEventListener('DOMContentLoaded', () => {
            const alertElement = document.getElementById('bootstrapAutoDismiss');
            const progressBar = alertElement.querySelector('.progress-bar-timer');
    
            if (alertElement && progressBar) {
                // Automatically set the color of the progress bar based on alert type
                if (alertElement.classList.contains('alert-success')) {
                    progressBar.style.backgroundColor = '#198754'; // Success
                } else if (alertElement.classList.contains('alert-info')) {
                    progressBar.style.backgroundColor = '#0dcaf0'; // Info
                } else if (alertElement.classList.contains('alert-warning')) {
                    progressBar.style.backgroundColor = '#ffc107'; // Warning
                } else if (alertElement.classList.contains('alert-danger')) {
                    progressBar.style.backgroundColor = '#dc3545'; // Danger
                }
    
                // Start the progress bar animation
                progressBar.style.width = '0%';
    
                // Dismiss the alert smoothly after 5 seconds
                setTimeout(() => {
                    const alert = new bootstrap.Alert(alertElement); // Bootstrap's Alert instance
                    alert.close(); // Close the alert programmatically
                }, 5000); // 5 seconds
            }
        });
    </script>


<% if(success && success.length) { %>
